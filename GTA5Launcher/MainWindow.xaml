<Window x:Class="GTA5Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GR Mods" 
        Height="750" 
        Width="1050"
        MinHeight="600"
        MinWidth="900"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title with gradient effect -->
        <Border Grid.Row="0" Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect Color="#00FF00" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
            <TextBlock Text="GR Mods" 
                       FontSize="42" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#00FF00" Offset="0"/>
                        <GradientStop Color="#00DD00" Offset="0.5"/>
                        <GradientStop Color="#00FF88" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </Border>

        <!-- Current Installation Info -->
        <Border Grid.Row="1" 
                Background="#252525" 
                BorderBrush="#00FF00" 
                BorderThickness="2" 
                CornerRadius="12" 
                Padding="25" 
                Margin="0,0,0,35"
                MaxHeight="220">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="8" Opacity="0.5"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="ðŸ“ Installation actuelle" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,12"/>
                    <TextBlock x:Name="CurrentLocationText" 
                               Text="Recherche en cours..." 
                               FontSize="14" 
                               Foreground="#E0E0E0" 
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Platform Selection -->
        <Viewbox Grid.Row="2" 
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center"
                 Stretch="Uniform"
                 MaxHeight="400"
                 MaxWidth="900">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="Choisissez votre plateforme :" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,35"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Steam Button -->
                    <Button x:Name="SteamButton" 
                            Style="{StaticResource PlatformButton}"
                            Click="SteamButton_Click"
                            Width="240" 
                            Height="300"
                            ToolTip="DÃ©placer GTA V vers Steam">
                        <StackPanel>
                            <Border x:Name="SteamImageBorder"
                                    Background="#1B2838"
                                    CornerRadius="10"
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <Image x:Name="SteamImage"
                                       Width="150" 
                                       Height="150" 
                                       Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Steam" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="White"/>
                            <Border x:Name="SteamActiveBadge" 
                                    Style="{StaticResource ActiveBadge}"
                                    Visibility="Collapsed">
                                <TextBlock Text="âœ“ ACTIF" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="#000000"/>
                            </Border>
                        </StackPanel>
                    </Button>

                    <!-- Rockstar Button -->
                    <Button x:Name="RockstarButton" 
                            Style="{StaticResource PlatformButton}"
                            Click="RockstarButton_Click"
                            Width="240" 
                            Height="300"
                            ToolTip="DÃ©placer GTA V vers Rockstar Games">
                        <StackPanel>
                            <Border x:Name="RockstarImageBorder"
                                    Background="#F9A602"
                                    CornerRadius="10"
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <Image x:Name="RockstarImage"
                                       Width="150" 
                                       Height="150" 
                                       Stretch="Uniform"/>
                            </Border>
                            <TextBlock Text="Rockstar Games" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="White"/>
                            <Border x:Name="RockstarActiveBadge" 
                                    Style="{StaticResource ActiveBadge}"
                                    Visibility="Collapsed">
                                <TextBlock Text="âœ“ ACTIF" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="#000000"/>
                            </Border>
                        </StackPanel>
                    </Button>

                    <!-- Epic Games Button -->
                    <Button x:Name="EpicButton" 
                            Style="{StaticResource PlatformButton}"
                            Click="EpicButton_Click"
                            Width="240" 
                            Height="300"
                            ToolTip="DÃ©placer GTA V vers Epic Games">
                        <StackPanel>
                            <Border x:Name="EpicImageBorder"
                                    Background="#313131"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0,0,0,15">
                                <Image x:Name="EpicImage"
                                       Width="150" 
                                       Height="150" 
                                       Stretch="UniformToFill"
                                       StretchDirection="Both"/>
                            </Border>
                            <TextBlock Text="Epic Games" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="White"/>
                            <Border x:Name="EpicActiveBadge" 
                                    Style="{StaticResource ActiveBadge}"
                                    Visibility="Collapsed">
                                <TextBlock Text="âœ“ ACTIF" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="#000000"/>
                            </Border>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Viewbox>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#252525" 
                BorderBrush="#00FF00" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="18" 
                Margin="0,35,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š " 
                               FontSize="16" 
                               Foreground="#00FF00"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" 
                               Text="PrÃªt" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="#E0E0E0"/>
                </StackPanel>
                <ProgressBar x:Name="ProgressBar" 
                             Height="25" 
                             Visibility="Collapsed" 
                             Foreground="#00FF00"
                             Background="#1E1E1E"
                             BorderBrush="#00FF00"
                             BorderThickness="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
