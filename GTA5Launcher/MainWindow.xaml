<Window x:Class="GTA5Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GTA V Enhanced Launcher" 
        Height="600" 
        Width="900"
        Background="#1E1E1E"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="GTA V Enhanced Launcher" 
                   FontSize="32" 
                   FontWeight="Bold" 
                   Foreground="#0078D4" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Current Installation Info -->
        <Border Grid.Row="1" 
                Background="#2C2C2C" 
                BorderBrush="#444444" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="20" 
                Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Installation actuelle :" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="CurrentLocationText" 
                           Text="Recherche en cours..." 
                           FontSize="14" 
                           Foreground="#CCCCCC" 
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Platform Selection -->
        <StackPanel Grid.Row="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <TextBlock Text="Choisissez votre plateforme :" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Steam Button -->
                <Button x:Name="SteamButton" 
                        Style="{StaticResource PlatformButton}"
                        Click="SteamButton_Click"
                        Width="200" 
                        Height="250">
                    <StackPanel>
                        <Image Source="assets/steam.png" 
                               Width="120" 
                               Height="120" 
                               Stretch="Uniform" 
                               Margin="0,0,0,15"/>
                        <TextBlock Text="Steam" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Rockstar Button -->
                <Button x:Name="RockstarButton" 
                        Style="{StaticResource PlatformButton}"
                        Click="RockstarButton_Click"
                        Width="200" 
                        Height="250">
                    <StackPanel>
                        <Image Source="assets/rockstar.png" 
                               Width="120" 
                               Height="120" 
                               Stretch="Uniform" 
                               Margin="0,0,0,15"/>
                        <TextBlock Text="Rockstar Games" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Epic Games Button -->
                <Button x:Name="EpicButton" 
                        Style="{StaticResource PlatformButton}"
                        Click="EpicButton_Click"
                        Width="200" 
                        Height="250">
                    <StackPanel>
                        <Image Source="assets/epic-games.png" 
                               Width="120" 
                               Height="120" 
                               Stretch="Uniform" 
                               Margin="0,0,0,15"/>
                        <TextBlock Text="Epic Games" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#2C2C2C" 
                BorderBrush="#444444" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="15" 
                Margin="0,30,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" 
                           Text="PrÃªt" 
                           FontSize="12" 
                           Foreground="#CCCCCC"/>
                <ProgressBar x:Name="ProgressBar" 
                             Height="20" 
                             Visibility="Collapsed" 
                             Foreground="#0078D4"/>
            </Grid>
        </Border>
    </Grid>
</Window>
