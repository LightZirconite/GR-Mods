<Window x:Class="GTA5Launcher.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs - GR Mods" 
        Height="600" 
        Width="900"
        MinHeight="400"
        MinWidth="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ“Š Journal des opÃ©rations" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#00FF00"/>
        </Border>

        <!-- Log Viewer -->
        <Border Grid.Row="1" 
                Background="#252525" 
                BorderBrush="#00FF00" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          x:Name="LogScrollViewer">
                <TextBlock x:Name="LogTextBlock" 
                           Text="Chargement des logs..." 
                           FontSize="12" 
                           FontFamily="Consolas"
                           Foreground="#E0E0E0" 
                           TextWrapping="NoWrap"
                           Padding="5"/>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="ðŸ”„ Actualiser" 
                    Click="RefreshButton_Click"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ—‘ï¸ Effacer les logs" 
                    Click="ClearButton_Click"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ“‹ Copier" 
                    Click="CopyButton_Click"
                    Style="{StaticResource ActionButton}"
                    Margin="0,0,10,0"/>
            <Button Content="ðŸ“‚ Ouvrir le fichier" 
                    Click="OpenFileButton_Click"
                    Style="{StaticResource ActionButton}"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3C3C"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00FF00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1C1C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
